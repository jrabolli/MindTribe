<h1>Create your Tribe</h1>

<%= form_for(@tribe) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  
  <div class="actions">
    <%= f.submit "Create Tribe" %>
  </div>
<% end %>